@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
<ul class="list-group">
@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <li class="list-group-item list-group-item-secondary">@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId }) | Stylist: @client.Stylist.Name</li>
}
<br>
<p>@Html.ActionLink("Add new client", "Create")</p>

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>